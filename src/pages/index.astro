---
// Static redirect page - no server-side logic needed
const redirectUrl = import.meta.env.BASE_URL + 'getting-started/introduction';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Abyss Documentation</title>
    <meta http-equiv="refresh" content={`0; url=${redirectUrl}`}>
    <link rel="canonical" href={redirectUrl}>
</head>
<body>
    <script define:vars={{ redirectUrl }}>
        // Fallback redirect for browsers that don't support meta refresh
        window.location.replace(redirectUrl);
    </script>
    <noscript>
        <p>Redirecting to <a href={redirectUrl}>documentation</a>...</p>
    </noscript>
</body>
</html>
